<div class="header">
  <div class="header__left">
    <%= link_to 'Manage App', root_path %>
  </div>
  <div class="header__right">
    <div class="header__right__text">
      <%= link_to '新規登録', new_post_path%>
    </div>
    <div class="header__right__text">スケジュール登録</div>
    <div class="header__right__text">ログアウト</div>
  </div>
</div>

<div class="lists">
  <% @posts.each do |post| %>
    <div class="card">
      <div class="card__imgframe">
        <%= link_to post.genre, "/posts/#{post.id}", method: :get %>
      </div>
      <div class="card__textbox">
        <div class="card__titletext">
          <%= post.company %>
        </div>
        <div class="card__overviewtext">
          <%= post.name %>
        </div>
      </div>
    </div>
  <% end %>
</div>
